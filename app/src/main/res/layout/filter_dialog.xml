<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent"
    android:background="@null"
    android:paddingBottom="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_back"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/price"
        >
        <Button
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_back_butt"
            app:layout_constraintTop_toTopOf="parent"
            android:text="All"
            android:textAllCaps="false"
            android:padding="5dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="5dp">
        </Button>
        <Button
            android:id="@+id/advanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:background="@drawable/menu_back_butt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/all"
            android:layout_margin="5dp"
            >
        </Button>
        <Button
            android:id="@+id/intermediate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermediate"
            android:padding="10dp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@drawable/menu_back_butt"
            app:layout_constraintTop_toBottomOf="@+id/all"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="5dp"
            >
        </Button>
        <Button
            android:id="@+id/beginner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Beginner"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:background="@drawable/menu_back_butt"
            app:layout_constraintTop_toBottomOf="@id/advanced"
            app:layout_constraintStart_toEndOf="@id/intermediate"
            android:layout_margin="5dp">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/level"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/tags">
    <Button
        android:id="@+id/free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Платные"
        android:padding="10dp"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:background="@drawable/menu_back_butt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        >
    </Button>
    <Button
        android:id="@+id/notfree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Беспатные"
        android:padding="10dp"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:background="@drawable/menu_back_butt"
        app:layout_constraintStart_toEndOf="@id/free"
        android:layout_margin="5dp"
        >
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                app:layout_constraintTop_toBottomOf="@+id/price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

</LinearLayout>
</FrameLayout>